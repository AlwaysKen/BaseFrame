<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/ccc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <com.jason.baseframe.view.TabView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-10dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/tab_tottom_padding"
            app:bottom_icon="@mipmap/ic_menu_start_conversation"
            app:bottom_text="@string/tab_one"
            app:bottom_text_size="@dimen/tab_text_size" />

        <com.jason.baseframe.view.TabView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/tab_tottom_padding"
            app:bottom_icon="@mipmap/ic_menu_start_conversation"
            app:bottom_text="@string/tab_two"
            app:bottom_text_size="@dimen/tab_text_size" />

        <com.jason.baseframe.view.TabView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/tab_tottom_padding"
            app:bottom_icon="@mipmap/ic_menu_start_conversation"
            app:bottom_text="@string/tab_three"
            app:bottom_text_size="@dimen/tab_text_size" />

        <com.jason.baseframe.view.TabView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="-10dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/tab_tottom_padding"
            app:bottom_icon="@mipmap/ic_menu_start_conversation"
            app:bottom_text="@string/tab_four"
            app:bottom_text_size="@dimen/tab_text_size" />

    </LinearLayout>
</LinearLayout>