<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/ccc"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <com.jason.baseframe.view.TabButton
            android:id="@+id/tab_first"
            app:image="@drawable/ic_bookmark_outline_grey600_24dp"
            app:clickimage="@drawable/ic_bookmark_black_24dp"
            app:clickcolor="#FFFF00ff"
            app:text="First"
            app:text_size="12dp"
            style="@style/main_tabbutton" />

        <com.jason.baseframe.view.TabButton
            android:id="@+id/tab_second"
            app:image="@drawable/ic_search_grey600_24dp"
            app:clickimage="@drawable/ic_search_black_24dp"
            app:clickcolor="#FFff0000"
            app:text="Second"
            app:text_size="12dp"
            style="@style/main_tabbutton" />

        <com.jason.baseframe.view.TabButton
            android:id="@+id/tab_third"
            app:image="@drawable/ic_notifications_none_grey600_24dp"
            app:clickimage="@drawable/ic_notifications_black_24dp"
            app:clickcolor="#FF00ffff"
            app:text="Third"
            app:text_size="12dp"
            style="@style/main_tabbutton" />

        <com.jason.baseframe.view.TabButton
            android:id="@+id/tab_fourth"
            app:image="@drawable/ic_favorite_outline_grey600_24dp"
            app:clickimage="@drawable/ic_favorite_grey600_24dp"
            app:clickcolor="#FF0000ff"
            app:text="Fourth"
            app:text_size="12dp"
            style="@style/main_tabbutton" />

    </LinearLayout>
</LinearLayout>